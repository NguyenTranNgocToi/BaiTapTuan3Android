<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="141dp"
        android:layout_height="183dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vsmart_live_xanh2"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="Điện Thoại Vsmart Joy 3 \n Hàng chính hãng"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.137" />

    <View
        android:id="@+id/view2"
        android:layout_width="411dp"
        android:layout_height="536dp"
        android:background="#C4C4C4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="210dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="@string/ch_n_m_t_m_u_b_n_d_i"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <Button
        android:id="@+id/buttonTrang"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_marginTop="52dp"
        android:background="#C5F1FB"
        app:backgroundTint="#C5F1FB"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <Button
        android:id="@+id/buttonDo"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="#F30D0D"
        app:backgroundTint="#F30D0D"
        app:layout_constraintEnd_toEndOf="@+id/buttonTrang"
        app:layout_constraintStart_toStartOf="@+id/buttonTrang"
        app:layout_constraintTop_toBottomOf="@+id/buttonTrang" />

    <Button
        android:id="@+id/button5"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="#000000"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/buttonDo"
        app:layout_constraintStart_toStartOf="@+id/buttonDo"
        app:layout_constraintTop_toBottomOf="@+id/buttonDo" />

    <Button
        android:id="@+id/button6"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="#234896"
        app:backgroundTint="#234896"
        app:layout_constraintEnd_toEndOf="@+id/button5"
        app:layout_constraintStart_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        android:layout_width="358dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#1952E2"
        android:text="@string/xong"
        android:textColor="#F9F2F2"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:strokeColor="#CA1536"
        app:strokeWidth ="2dp"
        app:cornerRadius ="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>